@model Models.LoginModel

@{
    ViewBag.Title = "Log in";
}
<div class="container">


    <section id="loginForm">
        <h2>Use a local account to log in.</h2>
        @using (Html.BeginForm(new {ReturnUrl = ViewBag.ReturnUrl}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)


            <form class="form-horizontal">
                <div class="form-group">
                    <div for="inputEmail" class="col-sm-2 col-md-2 col-lg-2"> Account username:</div>
                    <div class="col-sm-10 col-md-10 col-lg-10">
                        @Html.TextBoxFor(m => m.UserName)
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div for="inputPassword" class="col-sm-2 col-md-2 col-lg-2"> Account password:</div>
                    <div class="col-sm-10 col-md-10 col-lg-10">
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
              
                    <div class="col-sm-12">
                        <button type="submit" value="Log in" class="btn btn-primary">Login</button>
                    </div>
                    <div class="col-sm-12">
                        <p>
                            @Html.ActionLink("Register", "Register") if you don't have an account.
                        </p>
                    </div>
                </div>

            </form>


        }
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
