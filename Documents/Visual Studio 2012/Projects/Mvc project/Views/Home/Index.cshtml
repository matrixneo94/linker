@using System
@model IPagedList<LinksListViewModel>
@{
    ViewBag.Title = "Index";
}


<div class="container">
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Products</div>
        <div class="panel-body">
            <p>The following links are currently available.</p>
        </div>
        <div class="list-group">
        
                @foreach (var item in Model)
                {
        

                    <button class="list-group-item" onclick=" location.href = '@Url.Action("Details", new {id = item.ID})' ">

                        <h2 class="list-group-item-heading text-uppercase text-center">
                           @{
                               var date = DateTime.Now;
                               var date2 = DateTime.Parse(item.AddDate);
                               if (date.Day.Equals(date2.Day) && date.Year.Equals(date2.Year) && date.Month.Equals(date2.Month))
                               {
                                   <img id="" src="@Url.Content("Images/new.png")"height="35px"width="50px"/>
                               }
                            
                           }
                           @item.Title
                        </h2>
                     
                        <blockquote class="list-group-item-text text-left text-justify">
                            <p>Short decription: @item.ShortDescription | Created by: @item.Author</p>
                            <a href="https://@item.Link">@item.Link</a>

                            <p>Raiting: @item.Raiting <a href="@Url.Action("IncreaseRaiting", new {id = item.ID})">
                                    <img src="@Url.Content("Images/like.png")" height="35px"width="35px"/>
                                </a>
                                <a href="@Url.Action("DecreaseRaiting", new {id = item.ID})">
                                    <img src="@Url.Content("Images/unlike.png")"height="35px"width="35px"/>
                                </a>
                            </p>
                            @if (User.Identity.Name.Equals(@item.Author.UserName))
                            {
                                <p>@Html.ActionLink("Edit post", "Edit", new {id = item.ID}) | @Html.ActionLink("Delete post", "Delete", new {id = item.ID})</p>


                            }
                        </blockquote>
                    </button>
                }
        </div>
        </div>
    <div class="pagedList" data-otf-target="#LinksList">
        @Html.PagedListPager(Model, page => Url.Action("Index", new {page}),
            PagedListRenderOptions.MinimalWithItemCountText)
    </div>
</div>

  

             
             
             
             
             
             
             
             
             
             
  